@model IEnumerable<Bestshooter.Models.DomainModel.Message>

@{
    ViewBag.Title = "پیام ها";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<div style="text-align: center;">
    <h1>bestshooter.ir</h1>
</div>
<div class="row" dir="rtl">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="panel panel-default" dir="rtl" style="margin-top: 50px;">
            <div class="panel-body">
                <div>
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <tr>
                            <th style="text-align: center;">وضعیت
                            </th>
                            <th style="text-align: center;">تاریخ
                            </th>
                            <th style="text-align: center;">نام
                            </th>
                            <th style="text-align: center;">نام خانوادگی 
                            </th>
                            <th style="text-align: center;">پیام
                            </th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr class="odd">
                                <td style="text-align: center; vertical-align: central; font-size: 20px;">
                                    @if (item.Read == 0)
                                    { 
                                  <label style="font-size:22px;color:green;">جدید</label>
                                    }
                                    else if (item.Read == 1)
                                    { 
                                    <label>خوانده شده</label>
                                    }
                                </td>
                                <td style="text-align: center; vertical-align: central; font-size: 20px;">
                                    <label>@item.Date.ToShortDateString()</label>
                                </td>
                                <td style="text-align: center; vertical-align: central; font-size: 20px;">
                                    <label>@item.Name</label>
                                </td>
                                <td style="text-align: center; vertical-align: central; font-size: 20px;">
                                    <label>@item.Sirname</label>
                                </td>
                                <td style="text-align: center; vertical-align: central; font-size: 20px;">
                                    <a href="@Url.Action("MessageInfo", "Admin", new { id=item.Id})"><i class="fa fa-info-circle fa-2x"></i></a>
                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
