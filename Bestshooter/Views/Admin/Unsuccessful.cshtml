@model IEnumerable<Bestshooter.Models.DomainModel.Factor>

@{
    ViewBag.Title = "Unsuccessful";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<div style="text-align: center;">
    <h1>bestshooter.ir</h1>
</div>
<div class="row" dir="rtl">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="panel panel-default" dir="rtl" style="margin-top: 50px;">
            <div class="panel-body">
                <div>
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <tr>
                            <th style="text-align: center;">تاریخ
                            </th>
                            <th style="text-align: center;">مبلغ پرداخت شده
                            </th>
                            <th style="text-align: center;">خریدار 
                            </th>
                            <th style="text-align: center;">ایمیل
                            </th>
                            <th style="text-align: center;">کد رهگیری
                            </th>
                            <th style="text-align: center;">جزییات</th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr class="odd">
                                <td style="text-align: center; vertical-align: central; font-size: 20px;">
                                    <label>@item.Date</label>
                                </td>
                                <td style="text-align: center; vertical-align: central; font-size: 20px;">
                                    <label>@item.Fee تومان</label>
                                </td>
                                <td style="text-align: center; vertical-align: central; font-size: 20px;">
                                    <label>@Bestshooter.Helper.AdminUtilities.FOrder(item.OrderId).Sirname</label>
                                </td>
                                <td style="text-align: center; vertical-align: central; font-size: 20px;">
                                    <label>@Bestshooter.Helper.AdminUtilities.FOrder(item.OrderId).Email</label>
                                </td>
                                <td style="text-align: center; vertical-align: central; font-size: 20px;">
                                    <label>@item.FollowId</label>
                                </td>
                                <td style="text-align: center; vertical-align: central; font-size: 20px;">
                                    <a href="@Url.Action("InfoUFactor", "Admin", new { id = item.Id })" class="btn btn-info">جزییات</a>
                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>