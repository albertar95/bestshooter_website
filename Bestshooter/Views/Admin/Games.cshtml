@model IEnumerable<Bestshooter.Models.DomainModel.Game>

@{
    ViewBag.Title = "بازی";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<div style="text-align: center;">
    <h1>bestshooter.ir</h1>
</div>
<div class="row" dir="rtl">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="panel panel-default" dir="rtl" style="margin-top: 50px;">
            <div class="panel-body">
                @if (TempData["backfromsavegame"] == "ok")
                {
                    <h1 style="background-color: #4cff00;">با موفقیت ثبت شد</h1>
                }
                @if (TempData["backfromdelete"] == "ok")
                {
                    <h1 style="background-color: #4cff00;">با موفقیت حذف شد</h1>
                }
                @if (TempData["backfromedit"] == "ok")
                {
                    <h1 style="background-color: #4cff00;">ویرایش با موفقیت انجام شد</h1>
                }
                @if (TempData["backfromdelete2"] == "ok")
                {
                    <h1 style="background-color: #ff0000;">مشکل در دیتابیس</h1>
                }
                @if (TempData["backfromdeletebutpack"] == "ok")
                {
                    <h1 style="background-color: #ff0000;">به دلیل اینکه این بازی تعدادی پکیج دارد نمیتوان عمل حذف را انجام داد.لطفا ابتدا پکیج ها را حذف کنید</h1>
                }
                <div style="margin: 5px;">
                    <a href="@Url.Action("NewGame", "Admin")" class="btn btn-success">افزودن بازی</a>
                </div>

                <div>
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <tr>
                            <th style="text-align: center;">نام
                            </th>
                            <th style="text-align: center;">عکس در mainpage
                            </th>
                            <th style="text-align: center;">عکس در صفحه بازی 
                            </th>
                            <th style="text-align: center;">عکس alternative
                            </th>
                            <th style="text-align: center;">عملیات ها</th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr class="odd">
                                <td style="text-align: center; vertical-align: central; font-size: 20px;">
                                    <label>@item.Name.ToString()</label>
                                </td>
                                <td>
                                    @if (item.Pic1 != null)
                                    {
                                        <img src="~/@Url.Content(item.Pic1)" alt="بدون عکس" width="100" height="100" />
                                    }
                                    else
                                    {
                                        <label style="text-align: center; font-size: 20px;">بدون عکس</label>   
                                    }
                                </td>
                                <td>
                                    @if (item.Pic2 != null)
                                    {
                                        <img src="~/@Url.Content(item.Pic2)" alt="بدون عکس" width="100" height="100" />
                                    }
                                    else
                                    {
                                        <label style="text-align: center; font-size: 20px;">بدون عکس</label>

                                    }
                                </td>
                                <td>
                                    @if (item.Pic3 != null)
                                    {
                                        <img src="~/@Url.Content(item.Pic3)" alt="بدون عکس" width="100" height="100" />     
                                    }
                                    else
                                    {
                                        <label style="text-align: center; font-size: 20px;">بدون عکس</label>
                                    }
                                </td>
                                <td>
                                    <a href="@Url.Action("EditGame", "Admin", new { id = item.Id })" class="btn btn-warning">ویرایش</a>
                                    <a href="@Url.Action("DeleteGame", "Admin", new { id = item.Id })" id="deleteG" gid="@item.Id" class="btn btn-danger">حذف</a>
                                    <a href="@Url.Action("InfoGame", "Admin", new { id = item.Id })" class="btn btn-info">جزییات</a>
                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
